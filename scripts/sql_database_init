/*
This script checks and deletes an existing database, then recreate a new database 'Datawarehouse'.
Creates a bronze, silver and gold schema inside the 'Datawarehouse database'
*/

USE master;

GO

-- Drop and recreate 'Datawarehouse' database
IF EXISTS (SELECT 1 FROM sys.databases WHERE name = 'Datawarehouse')
BEGIN
	ALTER DATABASE Datawarehouse SET SINGLE_USER WITH ROLLBACK IMMEDIATE;
	DROP DATABASE Datawarehouse;
END;

GO

-- Create the database 'Datawarehouse'
CREATE DATABASE Datawarehouse;
GO

USE Datawarehouse; 

GO
-- Create bronze, silver, gold leyer schema

CREATE SCHEMA bronze;
GO
CREATE SCHEMA silver;
GO
CREATE SCHEMA gold;
GO
